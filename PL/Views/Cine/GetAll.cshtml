@model ML.Cine
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <section>
        <div class="row">
            <div class="=col-md-12">
                <h1 style="text-align:center; color:darkred; font-family:Elephant">CINE </h1>
            </div>
        </div>
        
    </section>


    <div class="row">
        <div class="col-md-12">
            <h5 style="color:darkgray; font-family:'Bodoni MT'">CORTIJOS DE LA CUIDAD DE MEXICO Y CUIDAD DE MEXICO</h5>
        </div>
    </div>

    <div style="float:right;">
        @Html.ActionLink("+", "Form", "Empresa", htmlAttributes: new { @class = "btn btn-success" })
    </div>
    <br />
    <table class="table table-dark table-hover table-bordered table-responsive">
        <thead>
            <tr class="table-secondary">
                <td>Editar</td>
                <td style="display :none;">id</td>
                <td>Nombre</td>
                <td>Direccion</td>
                <td>Ventas</td>

                <td>Eliminar</td>
            </tr>
        </thead>
        <tbody>
            @foreach (ML.Cine cine in Model.Cines)
            {
                <tr>
                    <td class="text-center"><a class="btn btn-warning bi bi-pencil-square" href="@Url.Action("Form", "Cine", new { IdCine = cine.IdCine })"></a></td>
                     <td style="display :none;">@cine.IdCine</td>
                    <td>@cine.Complejo </td>
                    <td>@cine.Direccion </td>
                    <td>@cine.Ventas </td>
                    <td class="text-center"><a class="btn btn-danger bi bi-trash" href="@Url.Action("Delete", "Cine", new { IdCine = cine.IdCine })" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"></a></td>
            </tr>
            }

        </tbody>
    </table>

</div>
